#include <iostream>
using namespace std;

// BFS function to traverse co-working centre layout
void bfs(int layout[10][10], int totalNodes, int source) {
    int queue[20];
    int front = 0, rear = 0;
    int visited[10] = {0};

    queue[rear] = source; // start from source node (building)
    visited[source] = 1;

    cout << "Floor-wise BFS traversal of the Co-Working Centre:\n";

    while (front <= rear) {
        int current = queue[front];
        cout << "Node " << current << "\t"; // can represent building/floor/room
        front++;

        for (int i = 0; i < totalNodes; i++) {
            if (layout[current][i] == 1 && visited[i] == 0) {
                visited[i] = 1;
                rear++;
                queue[rear] = i;
            }
        }
    }
}

int main() {
    int totalNodes = 8;

    /*
      Layout representation (example):
      0 -> Building
      1,2 -> Floors
      3,4 -> Rooms in Floor 1
      5,6,7 -> Rooms in Floor 2
    */
    int layout[10][10] = {
        {0,1,1,0,0,0,0,0}, // Building connected to Floor 1 and Floor 2
        {1,0,0,1,1,0,0,0}, // Floor 1 connected to rooms 3,4
        {1,0,0,0,0,1,1,1}, // Floor 2 connected to rooms 5,6,7
        {0,1,0,0,0,0,0,0}, // Room 3
        {0,1,0,0,0,0,0,0}, // Room 4
        {0,0,1,0,0,0,0,0}, // Room 5
        {0,0,1,0,0,0,0,0}, // Room 6
        {0,0,1,0,0,0,0,0}  // Room 7
    };

    int source = 0; // start BFS from the building
    bfs(layout, totalNodes, source);

    return 0;
}
