#include <iostream>
using namespace std;

struct Product {
    int id;
    string name;
    int sales;
};

void Merge(Product B[], int p, Product C[], int q, Product A[]) { 
    int i = 0, j = 0, k = 0;

    // Sort in descending order of sales
    while (i < p && j < q) {
        if (B[i].sales >= C[j].sales)
            A[k++] = B[i++];
        else
            A[k++] = C[j++];
    }

    while (i < p)
        A[k++] = B[i++];

    while (j < q)
        A[k++] = C[j++];
}

void MergeSort(Product A[], int n) {
    if (n > 1) {
        int mid = n / 2;

        Product B[mid];
        Product C[n - mid];

        for (int i = 0; i < mid; i++)
            B[i] = A[i];

        for (int i = mid; i < n; i++)
            C[i - mid] = A[i];

        MergeSort(B, mid);
        MergeSort(C, n - mid);

        Merge(B, mid, C, n - mid, A);
    }
}

int main() {
    Product products[] = {
        {101, "Coffee", 120},
        {102, "Sandwich", 80},
        {103, "Juice", 150},
        {104, "Cake", 60},
        {105, "Burger", 100}
    };

    int n = 5;

    MergeSort(products, n);

    cout << "Products Sorted by Sales (High to Low):\n";
    for (int i = 0; i < n; i++) {
        cout << products[i].id << " "
             << products[i].name << " "
             << products[i].sales << endl;
    }

    return 0;
}
