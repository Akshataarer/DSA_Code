#include <iostream>
using namespace std;

// Merge two sorted lists of milk production
void Merge(int left[], int l, int right[], int r, int result[]) {
    int i = 0, j = 0, k = 0;

    while (i < l && j < r) {
        if (left[i] <= right[j])
            result[k++] = left[i++];   // lower milk first
        else
            result[k++] = right[j++];
    }

    while (i < l)
        result[k++] = left[i++];

    while (j < r)
        result[k++] = right[j++];
}

// Merge Sort to sort milk yield of cows
void MergeSort(int milk[], int n) {
    if (n > 1) {
        int mid = n / 2;

        int left[mid];
        int right[n - mid];

        for (int i = 0; i < mid; i++)
            left[i] = milk[i];

        for (int i = mid; i < n; i++)
            right[i - mid] = milk[i];

        MergeSort(left, mid);
        MergeSort(right, n - mid);

        Merge(left, mid, right, n - mid, milk);
    }
}

int main() {
    // Milk production (liters) of cows
    int milk[] = {12, 7, 15, 9, 5, 18, 10};
    int cows = 7;

    MergeSort(milk, cows);

    cout << "Milk Production after Sorting (Low â†’ High): ";
    for (int i = 0; i < cows; i++)
        cout << milk[i] << " ";

    return 0;
}
