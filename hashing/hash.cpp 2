#include <iostream>
using namespace std;

const int TABLE_SIZE = 10;

// Node structure for chaining
struct Node {
    int hiveID;           // Key: Hive ID
    float honeyYield;     // Value: Honey yield (kg)
    Node* next;

    Node(int id, float yield) {
        hiveID = id;
        honeyYield = yield;
        next = NULL;
    }
};

class HiveHashTable {
private:
    Node* table[TABLE_SIZE];

    // Hash function
    int hashFunction(int hiveID) {
        return hiveID % TABLE_SIZE;
    }

public:
    HiveHashTable() {
        for (int i = 0; i < TABLE_SIZE; ++i)
            table[i] = NULL;
    }

    // Insert or update hive honey yield
    void insert(int hiveID, float honeyYield) {
        int hashKey = hashFunction(hiveID);
        Node* newNode = new Node(hiveID, honeyYield);

        if (table[hashKey] == NULL) {
            table[hashKey] = newNode;
        } else {
            Node* temp = table[hashKey];
            while (temp->next != NULL) {
                if (temp->hiveID == hiveID) {
                    temp->honeyYield = honeyYield;
                    delete newNode;
                    return;
                }
                temp = temp->next;
            }
            if (temp->hiveID == hiveID) {
                temp->honeyYield = honeyYield;
                delete newNode;
                return;
            }
            temp->next = newNode;
        }
    }

    // Search hive data
    void search(int hiveID) {
        int hashKey = hashFunction(hiveID);
        Node* temp = table[hashKey];

        while (temp != NULL) {
            if (temp->hiveID == hiveID) {
                cout << "Hive ID: " << hiveID
                     << " | Honey Yield: " << temp->honeyYield << " kg\n";
                return;
            }
            temp = temp->next;
        }
        cout << "Hive ID " << hiveID << " not found.\n";
    }

    // Remove hive record
    void remove(int hiveID) {
        int hashKey = hashFunction(hiveID);
        Node* temp = table[hashKey];
        Node* prev = NULL;

        while (temp != NULL && temp->hiveID != hiveID) {
            prev = temp;
            temp = temp->next;
        }

        if (temp == NULL) {
            cout << "Hive ID " << hiveID << " not found.\n";
            return;
        }

        if (prev == NULL) {
            table[hashKey] = temp->next;
        } else {
            prev->next = temp->next;
        }

        delete temp;
        cout << "Hive ID " << hiveID << " removed successfully.\n";
    }
};

int main() {
    HiveHashTable hiveTable;
    int choice, hiveID;
    float honeyYield;

    do {
        cout << "\n--- Smart Beekeeping Hash Table Menu ---\n";
        cout << "1. Insert / Update Hive Data\n";
        cout << "2. Search Hive Data\n";
        cout << "3. Remove Hive Data\n";
        cout << "4. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Enter Hive ID: ";
                cin >> hiveID;
                cout << "Enter Honey Yield (kg): ";
                cin >> honeyYield;
                hiveTable.insert(hiveID, honeyYield);
                break;

            case 2:
                cout << "Enter Hive ID to search: ";
                cin >> hiveID;
                hiveTable.search(hiveID);
                break;

            case 3:
                cout << "Enter Hive ID to remove: ";
                cin >> hiveID;
                hiveTable.remove(hiveID);
                break;

            case 4:
                cout << "Exiting Smart Beekeeping System...\n";
                break;

            default:
                cout << "Invalid choice. Try again.\n";
        }
    } while (choice != 4);

    return 0;
}
